unit sound;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.WinXCtrls, MMSystem;

type
  TForm1 = class(TForm)
    ToggleSwitch1: TToggleSwitch;
    SoundFolder: TComboBox;
    Label1: TLabel;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    procedure playClick(button: string);
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
var sr: TSearchRec;
begin
  if findFirst(ExtractFileDir(Paramstr(0))+'\sounds', faDirectory, sr)=0 then
  repeat
    soundFolder.Items.Add(sr.Name);
  until FindNext(sr)<>0;

end;

procedure TForm1.playClick(button: string);
var sPath: string;
begin
  sPath:=ExtractFileDir(Paramstr(0))+'\sounds'+soundFolder.Items[soundFolder.ItemIndex]+'\';
  button:=copy(button,2,length(button)-2);
  if FileExists(sPath+button+'.wav') then
    sPath:=sPath+button+'.wav' else
    sPath:=sPath+'rem.wav';
  sndPlaySound(pchar(sPath), SND_ASYNC or SND_NODEFAULT);

end;

end.
