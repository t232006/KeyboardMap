unit KeyboardUnit;

interface
uses SysUtils;
type
TKeyboardCont=array[0..255] of word;
TKeyboard=class
   private
    mas: TKeyboardCont ;
    s:string;
   public
      procedure addPress(ws:word; ls: longint);
     property cont:TKeyboardCont read mas;
     property st:string read s;
     constructor create;

end;

implementation
procedure TKeyboard.addPress(ws:word; ls: longint);
begin
   inc(mas[ls]);
   s:=s+'Key(wParam) =$'+IntToHex(ws)+' lParam=$'+InttoHex(ls)+chr(13);
end;

constructor TKeyboard.create;
begin
  for var i := Low(mas) to High(mas) do
    mas[i]:=0;
end;

end.
